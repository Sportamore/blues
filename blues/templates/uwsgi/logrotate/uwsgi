"/var/log/uwsgi/*.log.??????????"  
{
  su root syslog
  daily
  maxage 14
  rotate 2
  nocreate
  compress
  missingok
  notifempty
  size 10M
  nosharedscripts
  prerotate
    logfile=$1
    testar=0
    /usr/bin/lsof $logfile > /dev/null || testar=1
    if [ $testar -eq 0 ]; then 
        echo not rotating $logfile
        exit 1
    else 
    	echo $logfile
    fi
  endscript
}
